<h1> Made it to the Assignment Form Page </h1>
<%binding.pry %>
<p> Create an Assignment </p>
<p>Only a signed in user will be able to create an assignment</p>

<%= form_for (@assignment) do |f| %>
 
    <%= f.hidden_field :course_id %>

    <%= f.label :assignment_name %>
    <%= f.text_field :assignment_name %><br>
    <br>
    <%= f.label :description %><br>
    <%= f.text_area :description  %><br>
    <br>
    <%= f.label :question_1 %><br>
    <%= f.text_area :q_1  %><br>
    <br>
    <%= f.label :question_2 %><br>
    <%= f.text_area  :q_2  %><br>
    <br>
    <%= f.label :question_3 %><br>
    <%= f.text_area :q_3  %><br>
    <br>

    <%= f.submit %>
<% end %>

